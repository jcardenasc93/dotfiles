layout {
    background-color "transparent"

    focus-ring {
        active-color   "#e7c26c"
        inactive-color "#999080"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#e7c26c"
        inactive-color "#999080"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#e7c26c"
        inactive-color "#999080"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#e7c26c80"
    }
}